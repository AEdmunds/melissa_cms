<section>
		<div class='row'>
			<div class='span10 offset1'>
				<div class="page-header">
					<h1>
					    <%=raw @page.title %>
					</h1>
				</div>
			</div>		
		</div>	
</section>

<section>
	<div class="row">
		<% if @page.content_for(:side_body).empty? %>

			<div class="span10 offset1">
				<%=raw @page.content_for(:body) %>
			</div>

		<% else %>
		
			<div class="span5 offset1">
				<%=raw @page.content_for(:body) %>
			</div>
			<div class="span5">
				<%=raw @page.content_for(:side_body) %>			
			</div>	
		
		<% end %>
	</div>
</section>


