
<% content_for :javascripts do %>
  <% javascript_include_tag('fancybox/jquery.mousewheel-3.0.6.pack', 'fancybox/jquery.fancybox.pack', 'fancybox/helpers/jquery.fancybox-thumbs' ,'show', 'bootstrap-dropdown') %>
<% end %>

<% content_for :stylesheets do %>
	<% stylesheet_link_tag('fancybox/jquery.fancybox', 'fancybox/helpers/jquery.fancybox-thumbs') %>
<% end %>

<div class="page-header">
	<h1>
	    <%=raw @page.title %>
	</h1>
</div>



<section>
	<div class='row'>
		
		<% if @page.images.any? %> 	

			<div class='span4'>
				<div class='project-gallery'>
					<a href='<%= @page.images.first.thumbnail("900x600").url %>' class='img-container gallery' rel='project-gallery' >
						<div class='image'>
							<%= image_tag(@page.images.first.thumbnail("200x200#c").url) %>
						</div>
						<div class='image-link'>
							View gallery			
						</div>	
					</a>
					<ul class='img-thumbs'>
				    	<% @page.images.each do |image| %>
				      	<li>
				        	<%= link_to image_tag(image.thumbnail("200x200#c").url), image.thumbnail("900x600").url, class:'gallery', rel:'project-gallery'  %>
				      	</li>
				   		<% end %>
				  	</ul>
				</div>
			</div>

			<% if @page.content_for(:side_body).empty? %>
		
				<div class="span6">
					<%=raw @page.content_for(:body) %>
				</div>
		
			<% else %>
			
				<div class="span4">
					<%=raw @page.content_for(:body) %>
				</div>
				<div class="span4">
					<%=raw @page.content_for(:side_body) %>			
				</div>	
			
			<% end %>

		
		<% else %>

			<% if @page.content_for(:side_body).empty? %>
		
				<div class="span12">
					<%=raw @page.content_for(:body) %>
				</div>
		
			<% else %>
			
				<div class="span6">
					<%=raw @page.content_for(:body) %>
				</div>
				<div class="span6">
					<%=raw @page.content_for(:side_body) %>			
				</div>	
			
			<% end %>
	
		<% end %>

	</div>
</section>  

